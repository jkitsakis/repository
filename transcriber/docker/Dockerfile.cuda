# Use NVIDIA CUDA base image with Python 3.11
FROM nvidia/cuda:12.1.1-devel-ubuntu22.04

# Set working directory
WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    ffmpeg \
    libsndfile1 \
    libportaudio2 \
    libavcodec-extra \
    python3-dev \
    python3-pip \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3.11
RUN apt-get update && apt-get install -y python3.11 python3.11-venv python3.11-dev

# Set Python 3.11 as default
RUN ln -sf /usr/bin/python3.11 /usr/bin/python3 && ln -sf /usr/bin/python3.11 /usr/bin/python

# Copy files
COPY app/requirements.txt .
COPY app/transcriber.py .

# Install Python packages
RUN pip install --upgrade pip setuptools wheel
RUN pip install git+https://github.com/openai/whisper.git@517a43ecd132a2089d85f4ebc044728a71d49f6e
RUN pip install --no-cache-dir -r requirements.txt

# Ensure CUDA is available
RUN python -c "import torch; print('CUDA Available:', torch.cuda.is_available())"

CMD ["python", "transcriber.py"]
