{
  "manifest_version": 3,
  "name": "StreamSniffer",
  "version": "1.2",
  "description": "Capture, refresh, and copy the current streaming media URL from websites",
  "permissions": ["webRequest", "tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  }
}